<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textMyReviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="3dp"
        android:text="크린셀프세탁소 >"
        android:textColor="@color/detailTitleTextColor"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonMyReviewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="삭제"
        android:textColor="@color/addressTextColor"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textMyReviewName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/buttonMyReviewModify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="수정"
        android:textColor="@color/addressTextColor"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textMyReviewName"
        app:layout_constraintEnd_toStartOf="@+id/buttonMyReviewDelete" />

    <ImageView
        android:id="@+id/iconMyReviewThumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/textMyReviewThumbs"
        app:layout_constraintEnd_toStartOf="@+id/textMyReviewThumbs"
        app:layout_constraintTop_toTopOf="@+id/textMyReviewThumbs"
        app:srcCompat="@drawable/ic_baseline_thumb_up_24" />

    <TextView
        android:id="@+id/textMyReviewThumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textColor="@color/addressTextColor"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textMyReviewName"
        app:layout_constraintEnd_toStartOf="@+id/buttonMyReviewModify" />

    <RatingBar
        android:id="@+id/ratingBarMyReview"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textMyReviewName"
        app:layout_constraintTop_toBottomOf="@+id/textMyReviewName" />

    <TextView
        android:id="@+id/textMyReviewAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="경기도 용인시 수지구 풍덕천로 171번길 5"
        android:textColor="@color/addressTextColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBarMyReview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ratingBarMyReview"
        app:layout_constraintTop_toTopOf="@+id/ratingBarMyReview" />

    <TextView
        android:id="@+id/textMyReviewContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시설이 좋고 저렴해요"
        app:layout_constraintEnd_toEndOf="@+id/textMyReviewAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ratingBarMyReview"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarMyReview" />

    <TextView
        android:id="@+id/textMyReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="6dp"
        android:text="2020.11.25 00:00 작성"
        android:textColor="@color/addressTextColor"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMyReviewContent" />
</androidx.constraintlayout.widget.ConstraintLayout>